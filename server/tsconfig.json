{
	"compilerOptions": {
		"target": "ES2024",
		"module": "ESNext",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "./dist",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@controllers/*": ["src/controllers/*"],
			"@routes/*": ["src/routes/*"],
			"@services/*": ["src/services/*"]
		}
	},
	"include": ["src"]
}
